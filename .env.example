# Repository-wide example environment variables
# Copy this file to `.env` in each app folder and fill in real values.

# Scraper (output/scraper-app/.env)
SERPAPI_KEY=your_serpapi_key_here

# Google credentials (used by multiple apps)
# Set these to the paths where you store the client credentials and token on the host.
GOOGLE_SHEETS_CREDENTIALS=/home/you/credentials/google_oauth_client.json
GOOGLE_SHEETS_TOKEN=/home/you/credentials/google_token.json

# Task and Email sheet IDs (example)
SPREADSHEET_TASK_ID=your_task_sheet_id_here
SPREADSHEET_EMAIL_ID=your_email_sheet_id_here

# Email sending
USE_GMAIL_API=false
GMAIL_FROM=me
# Or SMTP settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Optional test recipient for local runs
TEST_RECIPIENT=you@example.com
